# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

PUT		/list									ListActions.createList
POST    /list                                   ListActions.createList
PUT		/list.{format}							ListActions.createList
POST    /list.{format}                          ListActions.createList

GET		/list/{<\w+>idList}						ListActions.showList
GET		/list/{<\w+>idList}.{format}			ListActions.showList

PUT		/element/{<\w+>idList}/{<\w+>text}				ElementActions.addElement
POST	/element/{<\w+>idList}/{<\w+>text}				ElementActions.addElement
PUT		/element/{<\w+>idList}/{<\w+>text}.{format}		ElementActions.addElement
POST	/element/{<\w+>idList}/{<\w+>text}.{format}		ElementActions.addElement


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
*       /{controller}/{action}.{format}                  {controller}.{action}