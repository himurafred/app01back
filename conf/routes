# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       					Application.index

PUT		/list.{<json|html>format} 									ListActions.createList(format:${format})
POST    /list.{<json|html>format}                  					ListActions.createList(format:${format})
GET		/list/{<\w+>idList}.{<json|html>format} 					ListActions.showList(format:${format})

PUT		/element/{<\w+>idList}/{<\w+>text}							ElementActions.addElement
POST	/element/{<\w+>idList}/{<\w+>text}							ElementActions.addElement

PUT		/element/{<\w+>idList}/{<\w+>text}.{<json|html>format}		ElementActions.addElement(format:${format})
POST	/element/{<\w+>idList}/{<\w+>text}.{<json|html>format}		ElementActions.addElement(format:${format})


# Ignore favicon requests
GET     /favicon.ico                            					404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                					staticDir:public

# Catch all
*       /{controller}/{action}                 						{controller}.{action}
*       /{controller}/{action}.{format}                  			{controller}.{action}